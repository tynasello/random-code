extends layout

block content
  h1=title

  form(method='POST' action='')
    br
    div.form-group
      label(for='first_name') First Name:
      input#first_name.form-control(type='text' placeholder='George' name='first_name' required='true' value=(undefined===author ? '' : author.first_name) )
      br
      label(for='family_name') Family Name:
      input#family_name.form-control(type='text' placeholder='Orwell' name='family_name' required='true' value=(undefined===author ? '' : author.family_name))
    div.form-group
        label(for='date_of_birth') Date of birth:
        input#date_of_birth.form-control(type='date' name='date_of_birth' value=(undefined===author ? '' : author.date_of_birth) )
        br
        label(for='date_of_death') Date of death:
        input#date_of_death.form-control(type='date' name='date_of_death' value=(undefined===author ? '' : author.date_of_death) )
        br
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul(style='list-style:none;padding:1rem 0;')
    for error in errors
     li.text-danger #{error.msg}