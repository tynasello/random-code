extends layout

block content

  h1 Genre: #{genre.name}

  div(style='margin-left:20px;margin-top:20px')

    h4 Books

    ul(style = 'padding:0;')
      each book in genre_books
        li(style='list-style: none;')
          a(href=book.url) #{book.title}
        |   #{book.summary}

      else
        p This genre has no books
    hr
    p
      a(href=genre.url+'/delete') Delete genre